{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2019", "esnext", "dom"],
    "outDir": "dist",
    "declarationDir": "dist/types",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["./dist", "./test"]
}
